{
  "name": "claude-run",
  "version": "0.2.0",
  "description": "A beautiful web UI for browsing Claude Code conversation history",
  "type": "module",
  "bin": {
    "claude-run": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:server\"",
    "dev:server": "tsx watch api/index.ts --dev",
    "dev:web": "vite --config web/vite.config.ts",
    "build": "pnpm build:server && pnpm build:web",
    "build:web": "vite build --config web/vite.config.ts",
    "build:server": "tsup api/index.ts --format esm --dts --clean",
    "start": "node dist/index.js",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/node-ws": "^1.1.1",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "node-pty": "^1.1.0",
    "@tanstack/react-virtual": "^3.13.15",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "diff": "^8.0.2",
    "hono": "^4.11.3",
    "lucide-react": "^0.562.0",
    "open": "^11.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "cli",
    "conversation",
    "viewer",
    "streaming",
    "ai",
    "anthropic"
  ],
  "author": "Kamran Ahmed",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamranahmedse/claude-run.git"
  },
  "homepage": "https://github.com/kamranahmedse/claude-run#readme",
  "bugs": {
    "url": "https://github.com/kamranahmedse/claude-run/issues"
  }
}
